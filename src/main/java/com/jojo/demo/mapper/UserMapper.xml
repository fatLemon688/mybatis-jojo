<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "com.jojo.demo.mapper.UserMapper">
    <select id="findOne" resultType="com.jojo.demo.entity.User">
        select * from t_user where id = #{id}
        <if test="id != null">
            And id = #{id}
        </if>
    </select>
</mapper>